<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxg="clr-namespace:DevExpress.Maui.DataGrid;assembly=DevExpress.Maui.DataGrid"
             x:Class="GavelPoMobile.Maui.Views.ApprovedPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <dxg:DataGridView x:Name="grid"
                          ItemsSource="{Binding Items}"
                          IsLoadMoreEnabled="True" 
                          LoadMoreCommand="{Binding LoadMoreCommand}" 
                          IsRefreshing="{Binding IsRefreshing, Mode=TwoWay}">
            <dxg:DataGridView.Columns>
                <dxg:TextColumn FieldName="SourceNo" Caption="No." MinWidth="150" FixedStyle="Start"/>
                <dxg:DateColumn FieldName="EntryDate" Caption="Entry Date" MinWidth="115" 
                                DisplayFormat="MM/dd/yyyy" 
                                HorizontalContentAlignment="Center"/>
                <dxg:TextColumn FieldName="Vendor" MinWidth="250"/>
                <dxg:TextColumn FieldName="ReferenceNo" Caption="Reference No." MinWidth="150"/>
                <dxg:NumberColumn FieldName="Total" Width="115" DisplayFormat="N2"/>
            </dxg:DataGridView.Columns>
        </dxg:DataGridView>
    </ContentPage.Content>
</ContentPage>